{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "root": true,
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "lineWidth": 120,
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  // 忽略 template 目录下的文件
  "files": {
    "includes": ["**", "!template", "!test-playground", "!dist", "!node_modules"]
  }
}
